<%- include ../partials/header.ejs %>

  <div class='container content'>
    <div class='row index-splash justify-content-center'>
      <div class='col-md-auto'>


        <h1>Sign Up</h1>

        <form method='post' action='/signup'>
          <fieldset>
            <legend>New User</legend>
            <pre class='login-error'><%= warning %></pre>
            <input type='text' name='name' placeholder='display name' required><br>
            <input type='text' name='city' placeholder='home city' required><br>
            <input type='email' name='email' placeholder='email' required><br>
            <input type='password' name='password' placeholder='password' required><br>
            <input type='password' name='confirmPassword' placeholder='confirm password' required><br>
            <input class='btn btn-block' type='submit' value='Submit'>
          </fieldset>
        </form>
      </div>
    </div>
  </div>

<%- include ../partials/footer.ejs %>
