<div class='col-sm-3 profile-sidebar'>
  <div class='profile-pic'>
    <img class='rounded img-fluid' src='<%= user.img_url %>'/>
  </div>

  <div class='profile-details'>
    <h4 class='user-name'><a class='city-name' href='/user/<%= user.id %>'><%= user.name %></a></h4>
    <h6 class='user-city'><%= user.city %></h6>
    <h6 class='user-join-date'>Joined <%= user.joined_on %></h6>
    <% if(user.id == loggedin_user_id){ %>
      <button type='button' class='btn btn-link edit-button' data-toggle='modal' data-target='#profile-details'>
      <img class='tool' src='/images/edit-button.svg' alt='edit-button'>
      </button>
    <% } %>

  </div>

  <div class='modal fade' id='profile-details' tabindex='-1' role='dialog' aria-hidden='true'>
    <div class='modal-dialog' role='document'>
      <div class='modal-content'>
        <div class='modal-header'>
          <h5 class='modal-title'>Edit profile</h5>
          <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
            <span aria-hidden='true'>&times;</span>
          </button>
        </div>
        <div class='modal-body'>
          <form method='post' action='/user/<%= user.id %>?_method=PUT'>
            <label>Name&nbsp;</label>
            <input type='text' name='name' value='<%= user.name %>'/><br />
            <label>Home City&nbsp;</label>
            <input type='text' name='city' value='<%= user.city %>'><br />
            <label>Profile pic URL&nbsp;</label>
            <input type='text' name='img_url' value='<%= user.img_url %>'>
            <div class='modal-footer'>
              <button type='button' class='btn btn-sm btn-secondary' data-dismiss='modal'>Cancel</button>
              <button type='submit' class='btn btn-sm btn-dark'>Update</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

</div>
