<%- include ../partials/header.ejs %>
<div class='container content'>

  <div class='row'>
    <div class='col-sm-3 profile-sidebar'>
      <div class='profile-pic'>
        <img class='rounded img-fluid' src='http://lorempixel.com/output/cats-q-c-400-400-5.jpg'/>
      </div>

      <div class='profile-details'>
        <h4 class='user-name'></h4>
        <h6 class='user-city'>Oakland, CA</h6>
        <h6 class='user-join-date'>Joined October 2017</h6>
        <a class='tool-button edit-profile' href='#'><img class='tool' src="/images/edit-button.svg" alt="edit-button"></a>
      </div>
    </div>

    <div class='col-sm-9 offset-sm-1 profile-main'>
      <dl class="row">

      <% posts.forEach(function(post) { %>
        <dt class="col-sm-3 city-name">
        <a href='/posts/1' class='city-name'><%= post.title %></a>
        <div>
        <a class='tool-button' href='#'><img class='tool' src="/images/edit-button.svg" alt="edit-button"></a>
        <a class='tool-button' href='#'><img class='tool' src="/images/delete-button.svg" alt="delete-button"></a>
        </div>
        </dt>
        <dd class="col-sm-9">
        <p><%= post.body %></p>
        </dd>

      <% }) %>


    </div>
  </div>

<%- include ../partials/footer.ejs %>
