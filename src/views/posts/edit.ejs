<div class='modal fade' id='edit-post' tabindex='-1' role='dialog' aria-hidden='true'>
  <div class='modal-dialog' role='document'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title'>Edit Post</h5>
        <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
          <span aria-hidden='true'>&times;</span>
        </button>
      </div>
      <div class='modal-body'>
        <form method='put' action='/posts/edit/<% post.id %>'>
          <input type='text' name='title' value='<%= post.title %>' required>
          <input type='hidden' name='user_id' value='<%= post.user_id %>'>
          <input type='hidden' name='city_id' value='<%= post.city_id %>'>
          <textarea name='body' class='form-control' rows='8' required><%= post.body %></textarea>
          <div class='modal-footer'>
            <button type='button' class='btn btn-sm btn-secondary' data-dismiss='modal'>Cancel</button>
            <button type='submit' class='btn btn-sm btn-dark'>Update</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
